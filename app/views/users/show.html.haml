.contents.row.mt-5.ml-5
  %p
    = @nickname
    さんの投稿一覧
  %main
    .album.py-5.bg-light.mt-5
      .container
        .row.d-flex.justify-content-center
          - @posts.each do |post|
            .col-md-4.col-lg-3.mb-5
              .card.mb-4.shadow-sm
                = image_tag post.image.url, width: '100%', height: "280", alt: "画像"
                .card-body
                  %h5.card-title
                    = post.user.nickname
                  %p.card-text
                    = post.text
                .btn-group
                  = link_to '詳細', post_path(post.id), method: :get, class: 'btn btn-outline-secondary btn-sm'
                  = link_to '編集', edit_post_path(post.id), method: :get, class: 'btn btn-outline-secondary btn-sm'
                  = link_to '削除', post_path(post.id), method: :delete, class: 'btn btn-outline-secondary btn-sm'

    = paginate @kaminari

%footer.bg-light.mt-5
  .container
    .row.d-flex.justify-content-center
      %h3.font-weight-bold
        %a.text-secondary.text-decoration-none{:href => "/"} Comfy
      .w-100
      %p.text-secondary Created and maintained by kuriken.
